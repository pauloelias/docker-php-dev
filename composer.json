{
  "name": "pauloelias/localappdev",
  "description": "Local Docker LEMP stack for developing secure PHP apps",
  "version": "1.2.0",
  "keywords": [
    "docker",
    "php",
    "postgres",
    "mariadb",
    "ssl",
    "https",
    "project",
    "boilerplate",
    "scaffold"
  ],
  "license": "MIT",
  "homepage": "https://github.com/pauloelias/localappdev",
  "type": "project",
  "support": {
    "email": "paulo@pauloelias.com",
    "issues": "https://github.com/pauloelias/localappdev/issues",
    "source": "https://github.com/pauloelias/localappdev",
    "docs": "https://github.com/pauloelias/localappdev/blob/master/README.md"
  },
  "require": {},
  "require-dev": {},
  "autoload": {},
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "7.0"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php -r \"copy('./.env.example', './.env');\"",
      "@php -r \"copy('./src/.env.example', './src/.env');\"",
      "@php -r \"unlink('composer.json');\"",
      "@php -r \"unlink('composer.lock');\"",
      "@php -r \"unlink('LICENSE.md');\"",
      "@php -r \"unlink('README.md');\"",
      "@php -r \"unlink('CHANGELOG.md');\""
    ]
  }
}
